{
  "name": "dragon-api",
  "version": "1.0.0",
  "description": "Dragon API for adding and manging images",
  "main": "index.js",
  "repository": "git@github.com:joshferrell/dragon-api.git",
  "author": "Josh Ferrell",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "start": "SERVER_DEVELOPMENT=true nodemon src/server.js --exec babel-node | bunyan",
    "coverage": "jest --coverage",
    "lint": "eslint ./src/**/*.js",
    "build": "babel src -d lib --copy-files",
    "deploy:local": "docker-compose build && docker-compose up",
    "deploy:push": "docker build -t email-server . && docker tag email-server jferrell/hapi-dragon && docker push jferrell/hapi-dragon"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "boom": "^5.2.0",
    "bunyan": "^1.8.12",
    "cheerio": "^1.0.0-rc.2",
    "dotenv-safe": "^4.0.4",
    "glue": "^4.2.0",
    "good": "^7.3.0",
    "good-bunyan": "^1.3.0",
    "hapi": "^16.5.2",
    "hapi-auth-jwt2": "^7.3.0",
    "hapi-swagger": "^7.8.1",
    "inert": "^4.2.1",
    "jest": "^21.1.0",
    "joi": "^11.0.3",
    "moment": "^2.18.1",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "pkginfo": "^0.4.1",
    "redis": "^2.8.0",
    "sequelize": "^4.8.0",
    "vision": "^5.1.0"
  }
}
