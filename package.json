{
  "name": "dragon-api",
  "version": "1.0.0",
  "description": "Dragon API for adding and manging images",
  "main": "index.js",
  "repository": "git@github.com:joshferrell/dragon-api.git",
  "author": "Josh Ferrell",
  "license": "MIT",
  "scripts": {
     "test": "jest",
     "test:ci": "jest --coverage && cat ./coverage/lcov.info | coveralls",
     "start": "SERVER_DEVELOPMENT=true nodemon src/server.js --exec babel-node | bunyan",
     "coverage": "jest --coverage",
     "lint": "eslint ./src/**/*.js",
     "build": "babel src -d lib --copy-files",
     "deploy:local": "docker-compose build && docker-compose up",
     "deploy:push": "docker build -t email-server . && docker tag email-server jferrell/hapi-dragon && docker push jferrell/hapi-dragon"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "coveralls": "^2.13.1",
    "eslint-plugin-jest": "^20.0.3",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "boom": "^5.2.0",
    "bunyan": "^1.8.12",
    "dotenv-safe": "^4.0.4",
    "good": "^7.3.0",
    "good-bunyan": "^1.3.0",
    "hapi": "^16.5.2",
    "hapi-swagger": "^7.7.1",
    "jest": "^20.0.4",
    "joi": "^10.6.0",
    "moment": "^2.18.1",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "pkginfo": "^0.4.1",
    "sequelize": "^4.8.0"
  }
}
